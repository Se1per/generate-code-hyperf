<?php

namespace App\Exception;

use Hyperf\Server\Exception\ServerException;
use Throwable;
use App\Constants\JsonCodeConstants;

class ApiException extends ServerException
{
    public function __construct(JsonCodeConstants|int $code = 0, string|array|null $message = null, ?Throwable $previous = null)
    {
        if(is_array($message)){
            $message = json_encode(
                $message
            );
        }
        
        if (is_null($message)) {
            if ($code instanceof JsonCodeConstants) {
                $message = $code->getMessage();
            } else {
                $message = JsonCodeConstants::CODE_ERROR;
            }
        }

        $code = $code instanceof JsonCodeConstants ? $code->value : $code;

        parent::__construct($message, $code, $previous);
    }
}